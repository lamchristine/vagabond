<div id="user_show">
  <!--User Header-->
  <div class="jumbotron">
    <div class="container">
      <h1>Welcome, <%= @user.first_name %></h1>
    </div>
  </div>
  <!--end User Header-->

  <div class="container">
    <div class="col-md-4">
      <h2>Profile</h2>
      <p>
        <%= image_tag @user.img, :class => "profile_image" %>
        <br>
        First Name: <%= @user.first_name %>
        <br>
        Last Name: <%= @user.last_name %>
        <br>
        Current City: <%= @user.current_city %>
        <br>
        Joined: <%= @user.created_at %>
      </p>
      <%= link_to "Edit", edit_user_path(@user), class: "btn btn-primary" %>
    </div>
    <div class="col-md-8">
      <!--********LOOP THROUGH USER ITINS****************-->
      <% @user.itineraries.each do |itinerary| %>
        <div id="itin_name" class="row">
          <h2><%= itinerary.name %>, </h2><p>(<%= itinerary.duration %> days)</p>
        </div>
        <div id="itin_desc" class="row limit">
          <h4>
            <%= itinerary.desc %>
            This is a description of the itinerary.  is simply dummy text of the
            printing and typesetting ...
          </h4>
        </div>
      <% end %>
      <!--*******LOOP THROUGH ACTIVITIES IN INTIN*******-->
      <div id="itin_act" class="row">
        <!-- <div class="col-md-12"> -->
          <div class="col-md-2">
            <!-- <%= image_tag @user.img, :class => "act_image" %> -->
            <img src="https://upload.wikimedia.org/wikipedia/commons/5/54/Golden_Gate_Bridge_0002.jpg">
          </div>
          <div class="col-md-2">
            <!-- <%= image_tag @user.img, :class => "act_image" %> -->
            <img src="https://upload.wikimedia.org/wikipedia/commons/5/54/Golden_Gate_Bridge_0002.jpg">
          </div>
          <div class="col-md-2">
            <!-- <%= image_tag @user.img, :class => "act_image" %> -->
            <img src="https://upload.wikimedia.org/wikipedia/commons/5/54/Golden_Gate_Bridge_0002.jpg">
          </div>
          <div class="col-md-2">
            <!-- <%= image_tag @user.img, :class => "act_image" %> -->
            <img src="https://upload.wikimedia.org/wikipedia/commons/5/54/Golden_Gate_Bridge_0002.jpg">
          </div>
        <!-- </div> -->
      </div>
      <!--*******LOOP THROUGH ACTIVITIES IN INTIN*******-->
      <!--********LOOP THROUGH USER ITINS****************-->
    </div> <!--closes col-md-8-->
  </div> <!--closes container-->
</div> <!--closes user_show-->
